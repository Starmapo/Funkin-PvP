<vbox width="100%" height="100%">
    <spacer height="100%"/>

    <scrollview id="scrollView" width="75%" height="540" contentWidth="100%" horizontalAlign="center">
        <style>
            .label {
                font-size: 24px;
            }
    
            .section-header {
                font-size: 18px;
            }
    
            .section-header .label {
                horizontal-align: center;
            }
        </style>
    
        <section-header text="UI" />
    
        <action-binds action="UI_UP" />
        <action-binds action="UI_LEFT" />
        <action-binds action="UI_RIGHT" />
        <action-binds action="UI_DOWN" />
        <action-binds action="ACCEPT" />
        <action-binds action="BACK" />
        <action-binds action="PAUSE" />
        <action-binds action="RESET" />
    </scrollview>

    <hbox width="75%" horizontalAlign="center" style="padding:5px;">
        <style>
            .label {
                font-size: 18px;
            }
        </style>

        <button id="changeDevice" width="100%" text="Change Device"/>
        <button id="resetDefault" width="100%" text="Reset to Default"/>
        <button id="clearAll" width="100%" text="Clear All"/>
    </hbox>

    <spacer height="100%"/>
</vbox>